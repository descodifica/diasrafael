{
    "env": {
        "browser": true,
        "commonjs": true
    },
    "parserOptions": {
        "ecmaVersion": 12
    },
    "globals": {
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "no-trailing-spaces": 1,
        "comma-dangle": ["error", {
          "arrays": "always",
          "objects": "always",
          "imports": "always",
          "exports": "always",
          "functions": "never"
      }]
    }
}
 